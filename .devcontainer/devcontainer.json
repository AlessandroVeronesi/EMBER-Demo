{
  "name": "Local Test (Prebuilt Image)",
  "image": "ember-demo:latest",
  "workspaceFolder": "/work/home",
  "workspaceMount": "source=${localWorkspaceFolder},target=/work/home,type=bind",
  "overrideCommand": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-python.python"
      ]
    }
  },

  "remoteEnv": {
    "VIRTUAL_ENV": "/opt/venv",
    "PATH": "/opt/venv/bin:${containerEnv:PATH}"
  }
}
